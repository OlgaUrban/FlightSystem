@model IEnumerable<FlightSystem.Web.Models.FlightListViewModel>


<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h3>Home</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            @Html.ActionLink("Add new flight", "Create", "Flight", null, new { @class = "btn btn-primary", style = "margin: 10px;" })
        </div>
    </div>
    <div class="row">
        <table class="table" style="padding-top: 10px;">
            <thead>
                <tr class="row">
                    <th rowspan="2">Aircraft</th>
                    <th colspan="2" class="text-center">Departure</th>
                    <th colspan="2" class="text-center">Destination</th>
                    <th rowspan="2"></th>
                </tr>
                <tr class="row">
                    <th class="col-xs-1">Airport</th>
                    <th class="col-xs-2">Date</th>
                    <th class="col-xs-1">Airport</th>
                    <th class="col-xs-2">Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="row">
                        <td class="col-xs-2">@item.Aircraft</td>
                        <td class="col-xs-3">@item.DepartureAirport</td>
                        <td class="col-xs-2">@item.DepartureDate</td>
                        <td class="col-xs-3">@item.DestinationAirport</td>
                        <td class="col-xs-2">@item.DestinationDate</td>
                        <td class="col-xs-2">@Html.ActionLink("Edit", "Edit", "Flight", new { id = @item.Id }, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


